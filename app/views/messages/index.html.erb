<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info"><%= message.name %></span>
            <span class="label label-success"><%= message.age %></span>
            <%= message.body %>
            ( <%= link_to "edit" , edit_message_path(message) %>
                <%= link_to "destroy" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %>
            )
            <br>
        <% end %>
    </div>
</div>

<%= form_for(Message.new, html: {class: "form-horizontal"}) do |f| %>
    <% if @message.errors.present? %>
        <div class="alert alert-danger">
            <%= alert %>
            <ul>
                <% @message.errors.full_messages.each do |full_message| %>
                    <li>
                        <%= full_message %>
                    </li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="form-group">
        <label for="message_name" class="col-sm-2 control-label glyphicon glyphicon-user">
            名前
        </label>
        <div class="col-sm-7">
        <%= f.text_field :name, class: "form-control", placeholder: "１文字以上２０文字以下" %>
        </div>
        <div class="col-sm-3"></div>
    </div>
    <div class="form-group">
        <label for="message_age" class="col-sm-2 control-label glyphicon glyphicon-plus">
            年齢
        </label>
        <div class="col-sm-7">
        <%= f.text_field :age, class: "form-control", placeholder: "0以上の数字を入力してください" %>
        </div>
        <div class="col-sm-3"></div>
    </div>
    <div class="form-group">
        <label for="message_body" class="col-sm-2 control-label glyphicon glyphicon-pencil">
            内容
        </label>
        <div class="col-sm-7">
        <%= f.text_area :body , class: "form-control", placeholder: "２文字以上３０文字以下", rows: "5" %>
        </div>
        <div class="col-sm-3"></div>
    </div>
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-3">
            <%= button_tag( type: 'submit', class: "btn btn-primary" ) do %>
               <span class="glyphicon glyphicon-send"> Create Message</span>
            <% end %>
        </div>
        <div class="col-sm-7"></div>
    </div>
<% end %>


