<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info"><%= message.name %></span>
            <%= message.body %>
            <br>
        <% end %>
    </div>
</div>
<div class="form-horizontal" role="form">
    <%= form_for(@message) do |f| %>
        <div class="form-group">
            <span class="glyphicon glyphicon-user">名前</span>
            <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
            <span class="glyphicon glyphicon-pencil">内容</span>
            <%= f.text_area :body , class: "form-control", placeholder: "メッセージ", rows: "10" %>
        </div>
        <%= button_tag( type: 'submit', class: "btn btn-primary" ) do %>
           <span class="glyphicon glyphicon-send"> Create Message</span>
        <% end %>
    <% end %>
</div>


